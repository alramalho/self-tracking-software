{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Module",
            "type": "python",
            "request": "launch",
            "module": "${input:moduleName}",
            "cwd": "${workspaceFolder}/backend",
            "args": [
                "-m ${input:moduleName}"
            ],
            "justMyCode": false
        },
    ],
    "inputs": [
        {
            "id": "moduleName",
            "type": "promptString",
            "description": "Module Name",
            "default": "main"
        },
    ]
}