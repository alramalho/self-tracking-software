{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Module",
            "type": "python",
            "request": "launch",
            "module": "${input:moduleName}",
            "cwd": "${workspaceFolder}/backend",
            "args": [
                "-m ${input:moduleName}"
            ],
            "justMyCode": false
        },
        {
            "name": "Python: Pytest",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "cwd": "${workspaceFolder}/backend",
            "args": [
                "${input:testPath}",
                "-v",
                "-s"
            ],
            "justMyCode": false
        },
        {
            "name": "Node.js: Backend",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/backend-node/src/index.ts",
            "cwd": "${workspaceFolder}/backend-node",
            "runtimeExecutable": "tsx",
            "runtimeArgs": [
                "watch"
            ],
            "env": {
                "NODE_ENV": "development"
            },
            "skipFiles": [
                "<node_internals>/**"
            ],
            "resolveSourceMapLocations": [
                "${workspaceFolder}/backend-node/**"
            ],
            "restart": true,
            "console": "integratedTerminal",
            "outputCapture": "std"
        }
    ],
    "inputs": [
        {
            "id": "moduleName",
            "type": "promptString",
            "description": "Module Name",
        },
        {
            "id": "testPath",
            "type": "promptString",
            "description": "Test path (e.g., tests/test_week_analyser.py::test_conversation_with_no_plans)",
        }
    ]
}