{
  "name": "tutorial",
  "private": true,
  "version": "0.0.0",
  "packageManager": "pnpm@10.0.0",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:client": "turbo run dev --filter=!server --parallel",
    "build": "turbo run build",
    "build:client": "turbo run build --filter=!server",
    "start": "turbo run start",
    "clean": "rm -rf node_modules && turbo run clean",
    "db:generate": "turbo run db:generate",
    "build-docker-backend": "docker build -f apps/backend-node/Dockerfile -t test-backend-node .",
    "prepare": "husky"
  },
  "pnpm": {
    "injectWorkspacePackages": true
  },
  "devDependencies": {
    "supabase": "^2.33.9",
    "turbo": "^2.5.5"
  }
}
